<!DOCTYPE html>
<html>
    <head>
        <title>MTVDB | <%= movie.title %></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="stylesheets/particularMovie.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div class="row info">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <img width="100%" src=<%= "https://www.themoviedb.org/t/p/w600_and_h900_bestv2"+movie.poster_path %>>
            </div>
            <div class="col-lg-9 com-md-6 col-sm-12">
                <h1><%= movie.title %></h1>
                <p><%= movie.release_date %> . <% movie.genres.forEach(genre => { %>
                    <span><%= genre.name %></span>.
                <% }); %> <%= movie.runtime %>m</p>
                <p><i class="bi bi-star-fill"> </i><%= movie.vote_average %></p>
                <p><em><%= movie.tagline %></em></p>
                <h4>Overview</h4>
                <p><%= movie.overview %></p>
                <p>Box Office: $<%= movie.revenue %></p>
                <% let trailer = movie.homepage %>
                <% if(trailer == "") { %>
                    <% trailer = "http://youtube.com/"+movie.title; %>
                <% } %>
                <a href=<%= trailer %> class="btn btn-outline-info"><i class="bi bi-play-btn-fill"> </i>Play Trailer</a>
                <% const keyword = movie.title.replace(/ /g, '-') %>
                <a href=<%= "https://soap2day.rs/search/"+ keyword %> class="btn btn-outline-info"><i class="bi bi-play-btn-fill"></i> Watch Now</a>
            </div>
        </div>

        <div class="container">
            <h3>Top Cast</h3>
            <div class="row">
                <% for(let i=0; i<actors.cast.length; i++){ %>
                    <div style="margin-bottom: 20px;" class="col-lg-2 col-md-4 col-sm-6 col-6">        
                        <div class="card h-100">
                            <img class="card-img-top" src= <%="http://image.tmdb.org/t/p/w500"+actors.cast[i].profile_path %>  alt="Card image cap">
                            <div class="card-body">
                                <% const keyword = actors.cast[i].name.replace(/ /g, '_') %>
                                <a href=<%= "https://en.wikipedia.org/wiki/"+keyword %> class="card-title"><%= actors.cast[i].name %></a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>