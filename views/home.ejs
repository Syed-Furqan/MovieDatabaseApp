<!DOCTYPE html>
<html>
    <head>
        <title>MTVDB | Home</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="stylesheets/home.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
              <a class="navbar-brand" href="#"><i class="bi bi-film"> </i>MTV | DB</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Contact</a>
                  </li>
                </ul>
                <a href="/about" class="navbarText" style="color: white; text-decoration: none;">About</a>
              </div>
            </div>
        </nav>
        
        <div>
            <img id="coverImage" src="https://cdn.wallpapersafari.com/65/44/c1xNqp.jpg">
        </div>

        <div class="container" id="searchForm">
            <h1 style="border: none; border-bottom: 5px solid #b8c415; padding-bottom: 20px;">Thousands of Movies and TV Series</h1>
            <h2 style="color:white; margin-bottom: 40px;">Get Info or Watch Online</h2>
            <form action="/moviesList" method="GET">
                <input style="width:80%; margin:auto" class="form-control" type="text" name="movieName" placeholder="Search">
            </form>
        </div>

        <div class="container">
            <h1>Latest</h1>
            <div class="row">
                <% movies[0].results.forEach(nMovie => { %>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-6">        
                        <div class="card h-100">
                            <img class="card-img-top" src= <%="http://image.tmdb.org/t/p/w185"+nMovie.poster_path%>  alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text"><i class="bi bi-star-fill"></i> <%= nMovie.vote_average %></p>
                                <h5 class="card-title"><%= nMovie.title %></h5>
                                <p><%= nMovie.release_date %></p>
                                <a href=<%= "/particularMovie?id="+nMovie.id %> class="btn btn-primary">More</a>
                                <% const keyword = nMovie.title.replace(/ /g, '-') %>
                                <a href=<%= "https://soap2day.rs/search/"+ keyword %> class="btn btn-default"><i class="bi bi-play-btn-fill"> </i>Watch Now</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="container">
            <h1>Popular</h1>
            <div class="row">
                <% movies[1].results.forEach(pMovie => { %>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-6">        
                        <div class="card h-100">
                            <img class="card-img-top" src= <%="http://image.tmdb.org/t/p/w185"+pMovie.poster_path%>  alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text"><i class="bi bi-star-fill"></i> <%= pMovie.vote_average %></p>
                                <h5 class="card-title"><%= pMovie.title %></h5>
                                <p><%= pMovie.release_date %></p>
                                <a href=<%= "/particularMovie?id="+pMovie.id %> class="btn btn-primary">More</a>
                                <% const keyword = pMovie.title.replace(/ /g, '-') %>
                                <a href=<%= "https://soap2day.rs/search/"+ keyword %> class="btn btn-default"><i class="bi bi-play-btn-fill"> </i>Watch Now</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="container">
            <h1>Top Rated</h1>
            <div class="row">
                <% movies[2].results.forEach(tMovie => { %>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-6">        
                        <div class="card h-100">
                            <img class="card-img-top" src= <%="http://image.tmdb.org/t/p/w185"+tMovie.poster_path%>  alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text"><i class="bi bi-star-fill"></i> <%= tMovie.vote_average %></p>
                                <h5 class="card-title"><%= tMovie.title %></h5>
                                <p><%= tMovie.release_date %></p>
                                <a href=<%= "/particularMovie?id="+tMovie.id %> class="btn btn-primary">More</a>
                                <% const keyword = tMovie.title.replace(/ /g, '-') %>
                                <a href=<%= "https://soap2day.rs/search/"+ keyword %> class="btn btn-default"><i class="bi bi-play-btn-fill"> </i>Watch Now</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <p style="color: rgb(190, 188, 188); text-align:center;">Copyright SFB @ 2020</p>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
    
</html>